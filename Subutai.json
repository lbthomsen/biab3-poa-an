{
    "name": "${environmentName}",
    "description": "Blockchain in a Box mk. III - authority node",
    "version": "0.0.1",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth",
    "containers": [
        {
            "hostname": "an",
            "template": "debian-stretch",
            "peer-criteria": "peers",
            "peer-layout": "an",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${domain}",
                    "internal-port": "80",
                    "external-port": "80"
                },
                {
                    "protocol": "tcp",
                    "domain": "${rpcDomain}",
                    "internal-port": "30303",
                    "external-port": "${rpcPort}"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "peers"
        }
    ],
    "peer-layouts": [
        {
            "name": "an",
            "peer-count": "${numberOfNodes}",
            "container-per-peer": "1"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/biab3-poa-an/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "ethereum_network",
                "value": "${ethereumNetwork}"
            }, 
            {
                "key": "environment_name", 
                "value": "${environmentName}"
            }, 
            {
                "key": "account_phrase", 
                "value": "${accountPhrase}"
            }, 
            {
                "key": "account_pwd", 
                "value": "${accountPwd}"
            }
        ],
        "groups": [
            {
                "name": "an",
                "hostnames": [
                    "an"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "biab2",
            "validation": "[a-zA-Z0-9]+"
        },
        "domain": {
            "description": "Enter the primary domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "discDomain": {
            "description": "Enter the discovery domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "discPort": {
            "description": "Enter the discovery port number",
            "type": "int",
            "default": "30303"
        },
        "rpcDomain": {
            "description": "Enter the discovery domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "rpcPort": {
            "description": "Enter the discovery port number",
            "type": "int",
            "default": "30303"
        },
        "jsonDomain": {
            "description": "Enter the json domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "jsonPort": {
            "description": "Enter the json port number",
            "type": "int",
            "default": "8546"
        },
        "numberOfNodes": {
            "description": "Enter the number of nodes",
            "type": "int",
            "default": "2"
        },
        "ethereumNetwork": {
            "description": "Enter the ethereum network id",
            "type": "int",
            "default": "2020"
        }, 
        "ethereumDifficulty": {
            "description": "Enter the mining difficulty",
            "type": "string",
            "default": "0x400", 
            "validation": "^0x[a-zA-Z0-9]+"
        },
        "coinbase": {
            "description": "Enter the coinbase (recipient of mined coins)",
            "type": "string",
            "default": "0x0CB71B91C8e56de5f93eC953fC3A6DB10045E948"
        }, 
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "LARGE",
            "validation": "LARGE,HUGE"
        }
    }
}
